{
	"$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
	"metadata": [
		{
			"src": [
				{
					"src": "../../../open-settings/src",
					"files": [
						"**/OpenSettings.csproj",
						"**/OpenSettings.AspNetCore.csproj",
						"**/OpenSettings.AspNetCore.Spa.csproj"
					]
				}
			],
			"dest": "api"
		}
	],
	"build": {
		"sitemap": {
			"baseUrl": "https://docs.opensettings.net",
			"priority": 0.1,
			"changefreq": "daily"
		},
		"content": [
			{
				"files": [
					"**/*.{md,yml}"
				],
				"exclude": [
					"_site/**"
				]
			}
		],
		"resource": [
			{
				"files": [
					"assets/**",
					"logo.svg",
					"favicon.ico"
				]
			}
		],
		"dest": "../_site/v1",
		"template": [
			"default",
			"modern"
		],
		"globalMetadata": {
			"_appLogoPath": "logo.svg",
			"_appFooter": "Copyright Â© 2024 OpenSettings. All rights reserved. <script src='./../common-script.js'></script>",
			"_appFaviconPath": "favicon.ico",
			"_appName": "OpenSettings",
			"_appTitle": "OpenSettings Docs",
			"_enableSearch": true,
			"pdf": false
		}
	}
}